{
	// Name, description and version
	"name" : "Activity",
	"description" : "This is Activity's plugin",
	"version" : "0.1",

	// Manifest version
	"manifest_version" : 2,

	// Icons
	"icons" : {
		"16" : "img/icon16.png",
		"48" : "img/icon48.png",
		"128" : "img/icon128.png"
	},

	// Browser actions
	"browser_action" : {
		"default_title" : "Activity",
		"default_icon" : "img/icon.png",
		"default_popup" : "popup.html"
	},

	// Permissions
	"permissions" : [
		"alarms"
	],

	// Background
	"background" : {
		"scripts" : ["script/eventPage.js"],
		"persistent" : false
	}
}